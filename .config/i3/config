for_window [all] title_window_icon padding 10px
for_window [all] title_format " "

################# assign applications to workspaces

# Assign application to start on a specific workspace
# you can find the class with the program xprop

# Workspace 2 file managers | image viewer
assign [class="Nemo|Thunar|Caja|nautilus|Nautilus"]                         → 2
assign [class="ristretto|Ristretto|shotwell|Shotwell|Xviewer|Nitrogen"]     → 2
# Workspace 10 (0) web browsers
assign [class="Firefox|Vivaldi-stable|Brave|Chrome"]                        → 0
# Workspace 4 mail clients | chat clients
assign [class="Evolution|evolution"]                                        → 4


